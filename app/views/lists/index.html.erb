<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <h2 class="mb-3 mb-md-0">My Lists</h2>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
  </div>

  <% if @lists.any? %>
    <% @lists.each do |list| %>
      <% image_url = list.bookmarks.first&.movie&.poster_url.presence || asset_path('placeholder.jpg') %>

      <div class="card mb-4 shadow-sm hover-shadow">
        <div class="row g-0 flex-column flex-md-row">
          <div class="col-12 col-md-4">
            <div
              class="list-image"
              style="background-image: url('<%= image_url %>'); min-height: 180px;">
            </div>
          </div>

          <div class="col-12 col-md-8 d-flex align-items-center">
            <div class="card-body">
              <h5 class="card-title mb-0">
                <%= link_to list.name, list_path(list), class: "stretched-link text-decoration-none text-dark" %>
              </h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No movie lists found. Create one to get started!</p>
  <% end %>
</div>
